</div>

<div class="gtco-cover gtco-cover-sm" style="background-image: url('/images/empresa.1350.jpg'); background-image: -webkit-image-set(url('/images/empresa.1350.webp') 1x);"
     data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container text-center">
        <div class="display-t">
            <div class="display-tc">
                <h1>@Localizer["We create what your company needs to keep growing!"]</h1>
            </div>
        </div>
    </div>
</div>
@{var anos = DateTime.Now.Year - 2015;}
<div id="gtco-counter" class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2>@Localizer["Facts"]</h2>
                <p>@anos @Localizer["Years of experience in IT development, public project management, SEO, SEM, database, data analysis"]</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6" data-aos="fade-up">
                <div class="feature-center">
                    <span class="counter js-counter" data-from="0" data-to="@anos" data-refresh-interval="50">1</span>
                    <span class="counter-label">@Localizer["Years of experience"]</span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up">
                <div class="feature-center">
                    <span class="counter js-counter" data-from="0" data-to="12" data-speed="2000" data-refresh-interval="50">1</span>
                    <span class="counter-label">@Localizer["Clients"]</span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up">
                <div class="feature-center">
                    <span class="counter js-counter" data-from="0" data-to="20" data-speed="2000" data-refresh-interval="50">1</span>
                    <span class="counter-label">@Localizer["Projects"]</span>
                </div>
            </div>
            <div class="col-md-3 col-sm-6" data-aos="fade-up">
                <div class="feature-center">
                    <span class="counter js-counter" data-from="0" data-to="794807175" data-speed="3000" data-refresh-interval="50">794807175</span>
                    <span class="counter-label">@Localizer["Lines of code"]</span>
                </div>
            </div>
        </div>
    </div>
</div>