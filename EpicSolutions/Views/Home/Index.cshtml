                <a class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/data.670.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/data.670.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
