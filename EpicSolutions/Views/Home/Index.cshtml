<input style="display:none" id="sep" value="@Localizer[","]"/>

<div class="flex-section gtco-gray-bg">
    <div class="gtco-col-1">
        <div class="text">
            <div class="row row-pb-sm">
                <div class="col-md-12">
                    <h2>@Localizer["Multidisciplinary team"]</h2>
                    <p>@Localizer["Our multidisciplinary team is the foundation of our innovative capabilities"]</p>
                    <p>@Localizer["We are constantly training to bring you scalable and modular solutions"]</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <ul class="check-li">
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>@Localizer["Software analists"]</li>
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>@Localizer["Software developers"]</li>
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>@Localizer["Business management"]</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="check-li">
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>Community<br /> Manager</li>
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>@Localizer["Project<br /> Evaluation"]</li>
                        <li><span style="color:#66D37E;margin-right:10px;"><i class="fas fa-check"></i></span>@Localizer["Bioinformatics"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="gtco-col-2 flex-img" style="background-image: url('/images/code.720.jpg'); background-image: -webkit-image-set(url('/images/code.720.webp') 1x);"></div>
</div>

<div class="gtco-cover gtco-cover-sm" style="background-image: url('/images/desk.1350.jpg'); background-image: -webkit-image-set(url('/images/desk.1350.webp') 1x);"
     data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container text-center">
        <div class="display-t">
            <div class="display-tc">
                <h1 data-aos="fade-up">@Localizer["Continuous development and training"]</h1>
            </div>
        </div>
    </div>
</div>
<div class="flex-section reverse">
    <div class="gtco-col-1">
        <div class="text">
            <div class="row row-pb-sm">
                <div class="col-md-12">
                    <h2>@Localizer["Our Mision"]</h2>
                    <p>@Localizer["Commiting to the sustainable improvement of our clients through continuous development"]</p>
                    <p>@Localizer["Through collaboration with our partners and clients aiming to bring long term quality solutions tailored to their needs"]</p>
                    <p>@Localizer["Our pillars are communication, constant training and transparency"]</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <ul class="check-li">
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Sustainability"]</li>
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Quality of Service"]</li>
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Continuity"]</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="check-li">
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Cooperation"]</li>
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Development"]</li>
                        <li><span style="color:#66D37E;margin-right:20px;"><i class="fas fa-check"></i></span>@Localizer["Communication"]</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <div class="gtco-col-2 flex-img" 
         style="background-image: url('/images/apis.1350.jpg'); background-image: -webkit-image-set(url('/images/apis.1350.webp') 1x);"></div>
</div>
<div class="gtco-cover gtco-cover-sm" style="background-image: url('/images/team.1350.jpg'); background-image: -webkit-image-set(url('/images/team.1350.webp') 1x);"
     data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container text-center">
        <div class="display-t">
            <div class="display-tc">
                <h1 data-aos="fade-up">@Localizer["Quality over quantity"]</h1>
            </div>
        </div>
    </div>
</div>

<div class="overflow-hid">
    <div class="gtco-section">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                    <h2>@Localizer["Services"]</h2>
                    <p>
                        @Localizer["Taking your company <strong>to the next level</strong>"]
                    <br />
                    @Localizer["Tailored technological solutions."]
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a href="#" class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/seo.670.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/seo.670.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
                        </picture>
                    </figure>
                    <div class="gtco-text">
                        <h2>@Localizer["Search Engine Optimization and Digital Presence"]</h2>
                        <p>@Localizer["Search Engine Optimization and Search Engine Marketing"]</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a href="#" class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/webdesign.640.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/webdesign.640.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
                        </picture>
                    </figure>
                    <div class="gtco-text">
