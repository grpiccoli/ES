            <div class="col-lg-4 col-md-4 col-sm-6">
                <a class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/desk2.750.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/desk2.750.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
                        </picture>
                    </figure>
                    <div class="gtco-text">
                        <h2>@Localizer["Platform integration"]</h2>
                        <p>@Localizer["GUI design for integrating data sources and APIs into one resource"]</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/apis2.589.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/apis2.589.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
                        </picture>
                    </figure>
                    <div class="gtco-text">
                        <h2>@Localizer["RESTful API and microservices"]</h2>
                        <p>@Localizer["Adaptative modular microservices for continuous development"]</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a class="gtco-card-item">
                    <figure>
                        <div class="overlay"></div>
                        <picture>
                            <source srcset="~/images/analyst.720.webp" type="image/webp" asp-append-version="true" />
                            <img src="~/images/analyst.720.jpg" alt="Image" class="img-fluid" asp-append-version="true" />
                        </picture>
                    </figure>
                    <div class="gtco-text">
                        <h2>Data Analytics</h2>
                        <p>@Localizer["Statistical analysis and analytical software development for data processing and visualization"]</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<div id="gtco-features">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading" data-aos="fade-up">
                <h2>@Localizer["Work ethics"]</h2>
                <p>@Localizer["We adapt to your needs complying to quality of service standards"]</p>
