<div class="gtco-section gtco-gray-bg">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6" data-aos="fade-up">
                    <h3>Envíanos tu consulta</h3>
                    <form action="#">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="name">Nombre</label>
                                <input type="text" id="name" class="form-control" placeholder="Nombre o Razón Social">
                            </div>

                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="email">Email</label>
                                <input type="text" id="email" class="form-control" placeholder="Correo electrónico">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="subject">Asunto</label>
                                <input type="text" id="subject" class="form-control" placeholder="Asunto">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Mensaje</label>
                                <textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Escríbenos algo"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Enviar" class="btn btn-primary">
                        </div>
                    </form>
                </div>
                <div class="col-md-5 col-md-push-1" data-aos="fade-up">

                    <div class="gtco-contact-info">
                        <h3>Información de Contacto</h3>
                        <ul>
                            <li class="razon social">Empresas Piccoli Limitada <br> RUT: 76.473.272-3 <br> Epic Solutions</li>
                            <li class="phone"><a href="tel://56952550410">+ 56 9 5255 0410</a></li>
                            <li class="email"><a href="mailto:info@yoursite.com">info@yoursite.com</a></li>
                            <li class="url"><a href="http://GetTemplates.co">GetTemplates.co</a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
